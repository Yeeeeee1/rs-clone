extends layouts/main.pug
block content
	div(class="page-form-container")
		if signinError
			p(class="alert")= signinError
		form(class="page-form" action="/signin" method="POST")
			div(class="control")
				div(class="field")
					label(class="label") Email
					div(class="control")
						input(class="input" name="email" type="text" placeholder="e.g. alexsmith@gmail.com" required)
				div(class="field")
					label(class="label") Password
					div(class="control")
						input(class="input" name="password" type="password" required)
				input(type="hidden" name="_csrf" value=csrf)
			button(class="button is-info mt-3") Sign in
		div(class="page-form-links")
			a(href="/signup") Sign up
			a(href="/reset") Reset password